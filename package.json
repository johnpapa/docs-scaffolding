{
	"name": "docs-scaffolding",
	"displayName": "docs-scaffolding",
	"description": "Extension to help scaffold Microsoft Learn Modules",
	"icon": "media/docs-logo-ms.png",
	"aiKey": "0a0e5961-85c2-451a-bce8-6a54e37c93be",
	"version": "0.0.1",
	"publisher": "docsmsft",
	"engines": {
		"vscode": "^1.50.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "scaffoldModule",
				"title": "Learn scaffolding: Create new module"
			},
			{
				"command": "moveSelectionUp",
				"title": "Learn scaffolding: Move selection up"
			},
			{
				"command": "moveSelectionDown",
				"title": "Learn scaffolding: Move selection down"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Docs Scaffolding Extension Configuration",
			"properties": {
				"docs.scaffolding.alias": {
					"type": "string",
					"default": "",
					"description": "Microsoft alias"
				},
				"docs.scaffolding.githubid": {
					"type": "string",
					"default": "",
					"description": "GitHub ID"
				},
				"docs.scaffolding.prefix": {
					"type": "string",
					"default": "",
					"description": "Default prefix e.g. learn"
				},
				"docs.scaffolding.product": {
					"type": "string",
					"default": "",
					"description": "Default product e.g. azure"
				},
				"docs.scaffolding.template_repo": {
					"type": "string",
					"default": "https://github.com/MicrosoftDocs/learn-scaffolding/archive/main.zip",
					"description": "Learn template repo"
				}
			}
		},
		"menus": {
			"explorer/context": [
				{
					"command": "scaffoldModule",
					"group": "1_modification"
				},
				{
					"command": "moveSelectionDown",
					"group": "1_modification"
				},
				{
					"command": "moveSelectionUp",
					"group": "1_modification"
				}
			],
			"editor/context": [
				{
					"when": "editorTextFocus && resourceFilename == index.yml",
					"command": "moveSelectionUp",
					"group": "1_modification"
				},
				{
					"when": "editorTextFocus && resourceFilename == index.yml",
					"command": "moveSelectionDown",
					"group": "1_modification"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/chai": "^4.2.11",
		"@types/chai-spies": "^1.0.1",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.50.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"@typescript-eslint/parser": "^2.18.0",
		"chai": "^4.2.0",
		"chai-spies": "^1.0.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"sinon": "^9.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"@octokit/rest": "^18.0.6",
		"@types/sinon": "^9.0.8",
		"axios": "^0.19.0",
		"download": "^8.0.0",
		"download-git-repo": "^1.0.2",
		"extract-zip": "^2.0.1",
		"fs-extra": "^9.0.1",
		"open": "^7.3.0",
		"replace-in-file": "^6.1.0",
		"sinon": "^9.0.1",
		"tmp": "^0.2.1",
		"vscode-extension-telemetry": "^0.1.1"
	}
}
