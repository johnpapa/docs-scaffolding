{
	"name": "scaffolding-context-proto",
	"displayName": "scaffolding-context-proto",
	"description": "",
	"version": "0.0.1",
	"publisher": "jw",
	"engines": {
		"vscode": "^1.50.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.getSelectedFolder",
				"title": "Learn scaffolding: Create standard module"
			},
			{
				"command": "extension.moveSelectionUp",
				"title": "Learn scaffolding: Move selection up"
			},
			{
				"command": "extension.moveSelectionDown",
				"title": "Learn scaffolding: Move selection down"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Docs Scaffolding Extension Configuration",
			"properties": {
				"docs.scaffolding.alias": {
					"type": "string",
					"default": "",
					"description": "Microsoft alias"
				},
				"docs.scaffolding.githubid": {
					"type": "string",
					"default": "",
					"description": "GitHub ID"
				},
				"docs.scaffolding.learn_repo_id": {
					"type": "string",
					"default": "",
					"description": "Default Learn repo"
				}
			}
		},
		"menus": {
			"explorer/context": [
				{
					"command": "extension.getSelectedFolder",
					"group": "1_modification"
				}
			],
			"editor/context": [
				{
					"when": "editorTextFocus && resourceFilename == index.yml",
					"command": "extension.moveSelectionUp",
					"group": "1_modification"
				},
				{
					"when": "editorTextFocus && resourceFilename == index.yml",
					"command": "extension.moveSelectionDown",
					"group": "1_modification"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.50.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.18.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"fs-extra": "^9.0.1",
		"replace-in-file": "^6.1.0"
	}
}
